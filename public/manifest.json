{
  "manifest_version": 3,
  "name": "My Chrome Panel",
  "version": "1.0.0",
  "description": "Chrome panel with React",
  "permissions": ["sidePanel", "activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Open Panel"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
